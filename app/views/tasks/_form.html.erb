<%= form_for @task do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="tasks-new">
    <div class="tasks-new-description">
      <%= f.label :description %><br />
      <%= f.text_area :description, :rows => 20, :cols => 120 %>
    </div>

    <br/>

    <div class="tasks-new-controls">
      <div>
        <%= f.label :priority %>
        <%= f.number_field :priority, :min => 0, :max => 5, :step => 1 %> <!-- TODO how to get this from the model object ? -->
      </div>

      <br/>

      <div>
        <%= f.label :deadline %>
        <%= f.date_select :deadline %>
      </div>

      <br/>

      <div>
        <%= f.hidden_field :status %>
        <%= f.submit %>
      </div>
    </div>
  </div>

<% end %>
