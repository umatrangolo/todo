<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Key</th>
    <th>Name</th>
    <th>Description</th>
    <th>Priority</th>
    <th>Deadline</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.key %></td>
    <td><%= task.name %></td>
    <td><%= task.description %></td>
    <td><%= task.priority %></td>
    <td><%= task.deadline %></td>
    <td><%= task.status %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

